{
  "compilerOptions": {
    "target": "ES2022",     
    "lib": ["ES2022"],                  
    "module": "Node16",
    "baseUrl": "./",                    
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types" 
    ] 
  },
  "include": [
    "src/**/*",          
    "**/*.d.ts"        
  ],
  "exclude": [
    "node_modules",     
    "**/*.spec.ts"      
  ]
}
