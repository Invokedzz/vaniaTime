{{> loginHeaders}}

<article>
    <div class="chatblock">
        <form action="/viewGuides/login">
        <input type="text" name="search" value="{{searchStuff}}" placeholder="Search guides...">
        <button class="search-button" type="submit">Search</button>
        </form>
    </div>
</article>

<article>
    <div class="chatblock">
        <h1>Guides:</h1>

        {{#if searchStuff}}

        <p class="msgSearcher">You're searching for: {{searchStuff}}</p>

        {{else}}

        <p class="msgSearcher">If you're not finding the guide you want, you can search it or create it!.</p>

        {{/if}}

        {{#each guides}}
            <div class="structure-content">
                <h3>- {{title}}</h3>
                <p>- {{message}}</p>
                <p>Created by: {{author}}</p>
                <div class="imageshit">
                    <img src="data:image/jpeg;base64, {{image}}" alt="" style="max-width: 200px;">
                </div>
                <div class="btns">
                    <form action="/editGuide/{{id}}" method="GET">
                        <button class="edit">Edit</button>
                    </form>
                    <form action="/createComment/{{id}}" method="GET">
                        <button class="edit">Comment</button>
                    </form>
                    <form action="/deleteGuide" method="POST">
                        <button class="erase" type="submit">Delete</button>
                        <input type="hidden" name="id" value="{{id}}">
                    </form>
                </div>
            </div>
        {{else}}
            <p class="msgSearcher">There are no guides available right now.</p>
        {{/each}}
    </div>
</article>
